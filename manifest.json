{
  "name": "BTCjam Helper (not affiliated with BTCjam)",
  "description": "Fixes many user complaints about the BTCjam interface.",
  "version": "0.9.1",
  "update_url": "http://btcjamhelper.com/updates.xml",
  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "https://www.bitstamp.net/api/ticker/",
    "https://btc-e.com/api/3/ticker/btc_usd",
    "https://btcjam.com/",
    "https://maxcdn.bootstrapcdn.com/*",
    "https://ajax.googleapis.com/*",
    "https://www.coinbase.com/*"
  ],
  "icons" : { "16": "icon_16.png",
                "48": "icon_48.png",
               "128": "icon_128.png" },
  "content_scripts": [
    {
      "matches": ["https://btcjam.com/*"],
      "js": ["jquery-2.1.1.min.js","excellentexport.min.js","date.js","functions.js","jquery.tablesorter.js"],
      "css": ["helper.css"],
      "run_at": "document_end"
    }
  ],
  "background":{
      "scripts":["background.js"],
      "persistent":false
  },
  "browser_action": {
    "default_title": "BTCjam Helper",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}

