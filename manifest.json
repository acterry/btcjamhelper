{
  "name": "BTCjamHelper",
  "description": "This fixes many user complaints about the BTCjam interface.",
  "version": "0.9.5",
  "update_url": "http://btcjamhelper.com/updates.xml",
  "permissions": [
    "activeTab",
    "identity",
    "notifications",
    "alarms",
    "storage",
    "ttsEngine",
    "https://www.bitstamp.net/api/ticker/",
    "https://btc-e.com/api/3/ticker/btc_usd",
    "https://btcjam.com/",
    "https://maxcdn.bootstrapcdn.com/*",
    "https://ajax.googleapis.com/*",
    "https://www.coinbase.com/*"
  ],
"icons" : { 
  "16": "icon_16.png",
  "48": "icon_48.png",
  "128": "icon_128.png" },
  "content_scripts": [
    {
      "matches": ["https://btcjam.com/*"],
      "js": ["jquery-2.1.1.min.js","jquery.cookie.js","excellentexport.min.js","date.js","sendkeys.js","bililiteRange.js","helper.js","jquery.tablesorter.js"],
      "css": ["helper.css"],
      "run_at": "document_end"
    }
  ],
  "background":{
      "scripts":["jquery-2.1.1.min.js","background.js"],
      "persistent":false
  },
  "browser_action": {
    "default_title": "BTCjam Helper",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}

